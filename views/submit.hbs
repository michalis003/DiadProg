<div class="container_submit">

    <div class="sidebar">
        <h3>Ενότητες</h3>
        <ul>
            <li onclick="showSection('katigoria')">Κατηγορία</li>
            <li onclick="showSection('basika')">Βασικά χαρακτηριστικά</li>
            <li onclick="showSection('topothesia')">Τοποθεσία</li>
            <li onclick="showSection('perigrafi')">Περιγραφή</li>
        </ul>
    </div>

    <div class="form-section">
        <form action="/submit" method="post">


            <div id="katigoria" class="form-part">
                <h2>Κατηγορία</h2>
                <div class="form-group">
                    <div class="form-group">
                        <label for="type">Κατηγορία</label>
                        <select id="type" name="type">
                            <option value="Αγορά">Πώληση</option>
                            <option value="Ενοικίαση">Ενοικίαση</option>
                        </select>
                    </div>
                </div>
            </div>

            <div id="basika" class="form-part active">
                <h2>Βασικά χαρακτηριστικά</h2>
                <div class="form-group">
                    <label for="price">Τιμή</label>
                    <input type="number" id="price" name="price" required>
                </div>
                <div class="form-group">
                    <label for="surface">Εμβαδόν</label>
                    <input type="number" id="surface" name="surface" required>
                </div>
                <div class="form-group">
                    <label for="levels">Επίπεδα</label>
                    <input type="number" id="levels" name="levels">
                </div>
                <div class="form-group">
                    <label for="level">Ορόφος</label>
                    <input type="number" id="level" name="level">
                </div>
                <div class="form-group">
                    <label for="kitchen">Κουζίνες</label>
                    <input type="number" id="kitchen" name="kitchen">
                </div>
                <div class="form-group">
                    <label for="bathroom">Μπάνια</label>
                    <input type="number" id="bathroom" name="bathroom">
                </div>
                <div class="form-group">
                    <label for="living_room">Σαλόνια</label>
                    <input type="number" id="living_room" name="living_room">
                </div>
                {{!--  --}}
                <div class="form-group">
                    <div class="form-group">
                    <label for="heat">Είδος Θέρμανσης</label>
                    <select id="heat" name="heat">
                        <option>Αυτόνομη</option>
                        <option>Κεντρική</option>
                        <option>Χωρίς</option>
                    </select>
                </div>
                </div>
                <div class="form-group">
                    <label for="constr_year">Έτος κατασκευής</label>
                    <input type="number" id="constr_year" name="constr_year" required>
                </div>
                <div class="form-group">
                    <label for="available">Διαθέσιμο απο</label>
                    <input type="date" id="available" name="available">
                </div>
            </div>

            <div id="topothesia" class="form-part">
                <h2>Τοποθεσία</h2>
                <div class="form-group">
                    <label for="location">Πόλη</label>
                    <input type="text" id="location" name="location" required>
                </div>
                <div class="form-group">
                    <label for="address">Διεύθυνση</label>
                    <input type="text" id="address" name="address" required>
                </div>
            </div>

            <div id="perigrafi" class="form-part">
                <h2>Περιγραφή</h2>
                <div class="form-group">
                    <label for="desc">Περιγραφή</label>
                    <input type="text" id="desc" name="desc">
                </div>
            </div>


            <button type="submit">Υποβολή</button>
        </form>
    </div>

</div>